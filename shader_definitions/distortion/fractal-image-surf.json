    {
      "name": "Zoom",
      "type": "float",
      "default": 0.5,
      "min": 0.0,
      "max": 1.0
    },
    {
      "name": "Offset X",
      "type": "float",
      "default": 0.5,
      "min": 0.0,
      "max": 1.0
    },
    {
      "name": "Offset Y",
      "type": "float",
      "default": 0.5,
      "min": 0.0,
      "max": 1.0
    }
  ]
}
